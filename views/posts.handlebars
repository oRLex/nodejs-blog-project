<div class="mt-5">
{{#each ideas}}
<div class="container">
  <div class="row mb-5 post-body">
    <div class="image-container">
          <div class="post-image">
            <a href="ideas/show/{{id}}">
              <img src="{{img}}" alt="Image Description" class="img-fuid w-100 rounded">
            </a>
          </div>
      </div>
      <div class="col-md-6 mt-4">
          <div class="post-text">
            <a href="ideas/show/{{id}}">
            <h3 class="h3 fr-view">{{title}}</h3>
            <p class="p limit">{{{stripTags (truncate details 1000)}}}</p>
            </a>
          </div>
    </div>
  </div>
</div>

{{else}}
<p>No vido ideas listed</p>
{{/each}}
</div>


