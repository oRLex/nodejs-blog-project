<div class="container">
<div class="card card-body mt-5">
  <h3>Створити новину</h3>
  <form action="/ideas/" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Заголовок</label>
      <input type="text" class="form-control" name="title" required>
    </div>
    <div class="form-group">
      <label for="title">Тіло</label>
      <textarea id="details" type="text" class="form-control" name="details" required></textarea>
    </div>
   <div class="form-group">
      <div class="custom-file">
        <input type="file" name="image" accept="uploads/*" class="custom-file-input" id="image" required>
        <label class="custom-file-label" for="image">Виберіть картинку</label>
      </div>
   </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
</div>